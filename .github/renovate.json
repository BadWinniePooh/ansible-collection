{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "timezone": "Europe/Berlin",
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"],
    "addLabels": ["security"]
  },
  "osvVulnerabilityAlerts": true,
  "ansible-galaxy": {
    "managerFilePatterns": [
      "/(^|/)requirements\\.yml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.docker/Dockerfile$/"
      ],
      "matchStrings": [
        "pipx install ansible-core==(?<currentValue>[^\\s\\\\\\n]+)"
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "ansible-core"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "schedule": [
        "every weekend"
      ]
    },
    {
      "matchManagers": [
        "ansible-galaxy",
        "dockerfile",
        "pip_requirements",
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "non-major dependencies"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "major-update"
      ]
    },
    {
      "matchDeprecated": true,
      "addLabels": [
        "deprecated"
      ],
      "schedule": ["at any time"]
    }
  ]
}
